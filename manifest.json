{
  "name": "google-hire-linkedin",
  "version": "1.0",
  "description": "Google Hire LinkedIn integration",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://hire.withgoogle.com/",
    "https://www.linkedin.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["linkedin.js"]
    }
  ],
  "options_page": "options.html",
  "manifest_version": 2
}